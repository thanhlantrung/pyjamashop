  </div>
  <div class="form-group">
    <%= f.label :color %><br>
    <%= f.text_field :color, class: 'form-control', placeholder: 'Color' %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: 'form-control', placeholder: 'Price' %>
  </div>
