<%= form_tag("/products", method: "get") do %>
  <div id="custom-search-input">
    <div class="input-group">
      <%= text_field_tag :q, '', class: 'search-query form-control', placeholder: 'Search' %>
      <div class="input-group-btn">
        <%= button_tag(:type => 'submit', :class => 'btn') do %>
           <i class="glyphicon glyphicon-search"></i>
        <% end %>
      </div>
    </div>
  </div>    
<% end %>

<div class='clear'></div>

        <div class="container-fluid">
          <div class="sale-div">
          
            <p class="sale-now">- ends today -</p>
         
            <p class="sale-price">25% off all pyjamas</p>
          
          </div> 
          <% if signed_in? && current_user.admin? %>
          <p class="new-product"><%= link_to 'New Product', new_product_path %></p>
          <% end %>
          <div class="row" id="product-row">
              <%= render @products %>         
          </div>
        </div> 
<div class="paginate"><%= will_paginate @products %></div>
     
