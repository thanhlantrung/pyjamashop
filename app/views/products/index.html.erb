<table>
  <thead>
    <h1>Pyjamas</h1>
  </thead>

  <tbody>

  
      <tr>
        <div class="container-fluid">
          <div class="row" id="product-row">
            <% @products.each do |product| %>
              <div class="col-sm-1 col-md-3">
              <%= image_tag(product.image_url, class: "img-responsive") %>
              <h3><%= product.name %></h3>
              <p class="p-product"><%= product.description %></p>
              <p class="p-product"><%= product.color %></p>
              <p class="p-product"><%= product.price %></p>
              <p class="edit-links"><%= link_to 'Show', product %>
              <%= link_to 'Edit', edit_product_path(product) %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              </div>
            <% end %>
          </div>
        </div> 
      <p class="new-product"><%= link_to 'New Product', new_product_path %></p>
      <%= link_to 'Back', products_path %>

