<h2 class="sign-in">Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="login">  
  <div class="field login-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "width300" %>
  </div>
  <div class="field login-field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "width300" %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :id => "log-in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>