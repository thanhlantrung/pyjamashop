<h2 class="sign-in">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="login">
  <div class="field login-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "width300" %>
  </div>

  <div class="field login-field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(min. <%= @minimum_password_length %> characters)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "width300" %>
  </div>

  <div class="field login-field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "width300" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :id => "sign-up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>