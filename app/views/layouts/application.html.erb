<!DOCTYPE html>
<html>
<head>
  <title>The Pyjama Shop</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>
<% if alert %>
<p id="alert-id" class="alert alert-info"> <%= alert %></p>
<% end %>
<% if notice %>
<p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>


 <nav class="navbar navbar-inverse navbar-static-top" role="navigation" style="margin-bottom:0">
    <div class="container">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class="collapse navbar-collapse" id="myNavbar">

      <ul class="nav navbar-nav" id="nav-links">
        <li id='pyjama-shop'><%= link_to 'THE PYJAMA SHOP', root_url %></li>
        <li><%= link_to 'PYJAMAS', products_url %></li>
        <li><%= link_to 'ABOUT', about_url %></li>
        <li><%= link_to 'CONTACT', contact_url %></li>
        
        
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit Profile'.html_safe, edit_user_path(current_user), class:'black' %></li>
          <li><%= link_to'<span class="glyphicon glyphicon-log-out"></span> Logout'.html_safe, destroy_user_session_path, :method => :delete, style: "color:black" %></li>
        <% else %>
          <li><%= link_to '<span class="glyphicon glyphicon-user"></span> Sign Up'.html_safe, new_user_registration_path, style: "color:black" %><li/>
          <li><%= link_to '<span class="glyphicon glyphicon-log-in"></span> Login'.html_safe, new_user_session_path, style: "color:black" %></li>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
<div class="clear"></div>

<div class="clear">
</div>
<div class='container'>

  <%= yield %>
</div>
</div>
<div class="clear">
</div>
<footer>
  <div class="container">
  <p>&copy; The Pyjama Shop 2016</p>
  </div>
</footer>
</body>
</html>
